# Environment Variables Template for VizfoliCraft Backend
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_EXPIRATION=86400

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_API_URL=https://api.github.com
GITHUB_TIMEOUT=5000
GITHUB_RETRY_ATTEMPTS=3
GITHUB_USER_AGENT=Portfolio-Generator/1.0

# LinkedIn Integration
LINKEDIN_CLIENT_ID=your_linkedin_app_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_app_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8080/api/auth/linkedin/callback
LINKEDIN_API_URL=https://api.linkedin.com/v2
LINKEDIN_TIMEOUT=5000
LINKEDIN_RETRY_ATTEMPTS=3

# Server Configuration
SERVER_PORT=8080

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Resume Generation Configuration
RESUME_STORAGE_PATH=./resumes
RESUME_BASE_URL=http://localhost:8080

# Portfolio Deployment Configuration
DEPLOYMENT_BASE_URL=https://portfolios.vizfolicraft.com
DEPLOYMENT_DEFAULT_PLATFORM=INTERNAL_CDN
DEPLOYMENT_STORAGE_PATH=./deployments
DEPLOYMENT_CDN_ENDPOINT=https://cdn.vizfolicraft.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Additional Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
API_RATE_LIMIT=1000
